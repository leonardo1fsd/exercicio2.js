function contarEspacos(frase) {
  let contador = 0;
  for (let i = 0; i < frase.length; i++) {
      if (frase[i] === " ") {
          contador++; // Conta se o caractere for espaço
      }
  }
  return contador;
}
   */

// ex 7
 /*
function juntarComHifens(palavras) {
  let resultado = "";
  for (let i = 0; i < palavras.length; i++) {
      resultado += palavras[i];
      if (i < palavras.length - 1) {
          resultado += "-"; // Adiciona hífen entre as palavras, mas não no final
      }
  }
  return resultado;
}
   */

